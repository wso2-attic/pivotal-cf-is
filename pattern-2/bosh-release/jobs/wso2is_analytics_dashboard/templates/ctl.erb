set -e

# define variables
wso2_product=wso2is_analytics
wso2_product_pack_identifier=wso2is-analytics
script_dir=$(dirname $0)
job_dir=${script_dir}/..
run_dir=/var/vcap/sys/run/${wso2_product}
log_dir=/var/vcap/sys/log/${wso2_product}
pid_file=${run_dir}/pid

# creates the directories
mkdir -p ${run_dir} ${log_dir}
# provide ownership of the directories 'vcap' user and group
chown -R vcap:vcap ${run_dir} ${log_dir}

debug_log=${log_dir}/${wso2_product}.log

function log_debug() {
  echo `date` $1 >> ${debug_log}
}

log_debug "Kicking off ctl script as `whoami` with $1"

# includes start command and stop commands
case $1 in

  start)
    # kill the previously running instance if any
    if [ -f ${pid_file} ]; then
        kill -9 `cat ${pid_file}`
    fi

    # unpack the JDK distribution and setup the JAVA_HOME
    cd /var/vcap/packages/oraclejdk/
    archive=`ls jdk*gz`
    JAVA_HOME=`pwd`/java
    mkdir java
    tar -xf ${archive} -C java/ --strip-components=1
    export JAVA_HOME

    log_debug "JAVA_HOME: ${JAVA_HOME}"

    cd /var/vcap/packages/${wso2_product}/
    archive=`ls ${wso2_product_pack_identifier}*zip`
    unzip ${archive}
    cd ${wso2_product_pack_identifier}*
    wso2_is_analytics_home=`pwd`

    log_debug "WSO2_IS_HOME: ${wso2_is_analytics_home}"

    # copy all the configuration files that need to be replaced
    cp -r ${job_dir}/config/bin/* ${wso2_is_analytics_home}/bin/
    cp -r ${job_dir}/config/repository/conf/* ${wso2_is_analytics_home}/repository/conf/

    # add any external libraries required during runtime
    cp /var/vcap/packages/mysqldriver/* ${wso2_is_analytics_home}/repository/components/lib/

    # start the WSO2 product server
    ${wso2_is_analytics_home}/bin/wso2server.sh start

    # sleep until the server starts up
    sleep 20
    wso2_is_pid=`ps -ef | grep java | grep -v grep | awk '{print $2}' `
    echo ${wso2_is_pid} > ${pid_file}

    log_debug "Process ID: `cat ${pid_file}`"
    ;;

  stop)

    kill -9 `cat ${pid_file}`
    rm -f ${pid_file}
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
